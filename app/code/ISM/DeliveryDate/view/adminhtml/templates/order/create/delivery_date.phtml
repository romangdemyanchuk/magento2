<script type="text/javascript">
    require([
        'jquery',
        'mage/calendar'
    ], function ($) {
        $(document).ready(function () {
            let config = <?= $block->getConfig() ?>;
            let disabled = config.shipping.delivery_date.disabled;
            let noday = config.shipping.delivery_date.noday;
            let hourMin = parseInt(config.shipping.delivery_date.hourMin);
            let hourMax = parseInt(config.shipping.delivery_date.hourMax);
            let format = config.shipping.delivery_date.format;
            if(!format) {
                format = 'yy-mm-dd';
            }
            let disabledDay = disabled.split(",").map(function(item) {
                return parseInt(item, 10);
            });

            if(noday) {
                var options = {
                    minDate: 0,
                    dateFormat:format,
                    hourMin: hourMin,
                    hourMax: hourMax
                };
            } else {
                var options = {
                    minDate: 0,
                    dateFormat:format,
                    hourMin: hourMin,
                    hourMax: hourMax,
                    beforeShowDay: function(date) {
                        var day = date.getDay();
                        if(disabledDay.indexOf(day) > -1) {
                            return [false];
                        } else {
                            return [true];
                        }
                    }
                };
            }
            $('#delivery_date').datetimepicker(options);
        });
    });
</script>
